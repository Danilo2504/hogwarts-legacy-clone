---
import CardGame from "../Common/CardGame.astro";
import { cardGameInfo, gameDescription } from "../../utils/cardGameInfo";
---

<section class="flex justify-center flex-col pt-4 lg:pt-0">
  <p
    class="mx-auto max-w-[880px] text-sm lg:text-[1.125rem] leading-[1.3] text-[#fff4e2] text-center lg:text-left"
  >
    {gameDescription}
  </p>
  <h1 class="lg:mt-4 lg:mb-8">
    <img class="mx-auto my-5 w-[680px]" src="/assets/live-the-unwritten.webp" />
  </h1>
  <div
    class="max-w-[480px] lg:max-w-[1280px] mt-8 mx-auto mb-0 grid grid-cols-1 lg:grid-cols-3"
  >
    {cardGameInfo.map((values) => <CardGame {...values} />)}
  </div>
</section>
<div class="h-[50vh]"></div>
