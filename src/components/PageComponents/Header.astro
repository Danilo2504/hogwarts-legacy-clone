---
import ArrowButton from "../Common/ArrowButton.astro";
import Button from "../Common/Button.astro";
import { iconList } from "../../utils/iconList";
---

<!-- Header  -->
<header class="hidden lg:flex justify-between relative top-0 left-0 w-full">
  <nav class="flex gradient-nav-right">
    <div class="relative">
      <img
        class="absolute left-0 top-1/2 -translate-y-1/2 opacity-20 h-full"
        src="/assets/nav-bar-bg-left.webp"
      />
    </div>
    <ArrowButton url={iconList.media.path} text={iconList.media.label}>
      <Fragment slot="before" set:html={iconList.media.icon} />
    </ArrowButton>
    <ArrowButton url={iconList.faq.path} text={iconList.faq.label}>
      <Fragment slot="before" set:html={iconList.faq.icon} />
    </ArrowButton>
    <ArrowButton url={iconList.community.path} text={iconList.community.label}>
      <Fragment slot="before" set:html={iconList.community.icon} />
    </ArrowButton>
  </nav>

  <nav class="gradient-nav-left">
    <img
      class="absolute top-0 right-[1vw] h-full w-auto mix-blend-screen origin-[top_center] nav-rgt-animation"
      src="/assets/nav-glow.jpg"
    />
    <img
      class="absolute top-0 right-[1vw] h-full w-auto mix-blend-screen origin-[top_center] nav-rgt-animation nav-rgt-2-animation"
      src="/assets/nav-glow.jpg"
    />
    <img
      class="absolute right-0 top-0 opacity-20 h-full max-h-full"
      src="/assets/nav-bar-bg-right.webp"
    />
    <div class="flex relative">
      <Button url={iconList.other.path} text={iconList.other.label}>
        <Fragment slot="before" set:html={iconList.other.icon} />
      </Button>
      <ArrowButton
        url={iconList.buy_now.path}
        text={iconList.buy_now.label}
        isColored
      >
        <Fragment slot="before" set:html={iconList.buy_now.icon} />
      </ArrowButton>
    </div>
  </nav>
  <img
    class="absolute -bottom-1 right-0 h-auto min-w-[26vw] w-[28vw]"
    src="/assets/bar-right.png"
  />
  <img
    class="absolute -bottom-1 left-0 h-auto min-w-[33vw] w-[35vw]"
    src="/assets/bar-left.png"
  />
</header>

<!-- Header Mobile  -->
<header
  class="fixed z-10 w-full top-0 bg-[url('https://cdn-hogwartslegacy.warnerbrosgames.com/static/mobile-nav-bg.jpg')] bg-cover bg-no-repeat bg-bottom lg:hidden"
>
  <div
    class="flex justify-between items-center w-full h-[60px] border-b-[#242424] border-b border-solid"
  >
    <a class="pl-2" href="/">
      <img class="h-auto w-[150px]" src="/assets/hero-logo.webp" />
    </a>

    <div class="flex items-center">
      <a
        href="https://www.hogwartslegacy.com/en-us/purchase"
        target="_blank"
        class="text-sm leading-[1.3] text-[#fff4e2] hover:text-[#fff] py-2 px-4 rounded-[100px] cursor-pointer bg-top bg-cover inline-flex justify-center items-center hover:shadow-[0_0_30px_rgba(182,148,81,0.5)] hover:brightness-[110%] transition-btn bg-[url('https://cdn-hogwartslegacy.warnerbrosgames.com/static/gold-button-bg.jpg')]"
      >
        <span>Buy Now</span>
      </a>
      <button class="p-4">
        <span><Fragment set:html={iconList.menu.icon} /></span>
      </button>
    </div>
  </div>
</header>
<div class="flex justify-between items-start w-full h-auto">
  <img class="lg:hidden flex h-auto w-1/2" src="/assets/bar-left.png" />
  <img class="lg:hidden flex h-auto w-1/2" src="/assets/bar-right.png" />
</div>
