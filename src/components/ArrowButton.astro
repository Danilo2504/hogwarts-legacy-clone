---
import Button from "./Button.astro";
import type { ButtonTypes } from "../types/types";

type Props = ButtonTypes;
const { url, text, isColored } = Astro.props;
---

<Button url={url} text={text} isColored={isColored}>
  <slot name="before" slot="before" />
  <svg
    slot="after"
    class:list={[
      "text-[.575vw] transition-transform duration-[0.3s] ease-[ease] delay-[0.1s] group-hover:translate-x-2 group-hover:scale-110",
      { "text-[#ffd075]": isColored },
      {
        "text-[#fff4e2] group-hover:text-[#ffd075]": !isColored,
      },
    ]}
    viewBox="0 0 256 512"
    aria-hidden="true"
    width="1.25em"
    height="1em"
    ><path
      d="m219.9 266.7-144.01 160c-5.906 6.562-16.03 7.094-22.59 1.188-6.918-6.271-6.783-16.39-1.188-22.62L186.5 256 52.11 106.7c-5.88-6.6-5.36-16.66 1.18-22.6 6.57-5.9 16.69-5.37 22.6 1.19l144 159.1c5.51 7.01 5.51 16.21.01 22.31z"
      style="fill:currentcolor"></path></svg
  >
</Button>
